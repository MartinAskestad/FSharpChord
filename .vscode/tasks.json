{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "command": "npm",
            "args": [
                "start"
            ],
            "type": "shell",
            "label": "Start",
            "group": "build",
            "isBackground": true,
            "problemMatcher": {
                "fileLocation": "absolute",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "webpack: Compiling"
                    },
                    "endsPattern": {
                        "regexp": "webpack: (Compiled successfully|Failed to compile)"
                    }
                },
                "pattern": {
                    "regexp": "^(.*)\\((\\d+),(\\d+)\\): \\((\\d+),(\\d+)\\) (warning|error) FABLE: (.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "endLine": 4,
                    "endColumn": 5,
                    "severity": 6,
                    "message": 7
                }
            }
        },
        {
            "label": "Test",
            "command": "dotnet",
            "type": "shell",
            "args": [
                // "watch",
                "test"
            ],
            "options": {
                "cwd": "./tests"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$msCompile",
                {
                    "owner": "custom",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^\\s+at\\s\\w+\\.(\\w.+) in\\s+([\\w|\\W]+):line\\s(\\d+)$",
                            "message": 1,
                            "file": 2,
                            "line": 3
                        }
                    ]
                }
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}